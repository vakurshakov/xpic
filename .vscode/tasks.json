{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Project build-script",
            "command": "./build.sh",
            "args": [ "--config RELEASE", "--parallel 8" ],
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
}
