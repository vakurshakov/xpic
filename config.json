  "Particles": [ { "sort_name": "electrons", "Np": 50, "n": 1, "q": -1, "m": 1, "T": 10 } ],

  "Presets": [
    {
      "command": "SetParticles",
      "particles": "electrons",

      "momentum": { "name": "MaxwellianMomentum", "tov": true },
      "-momentum": { "name": "PreciseMomentum", "value": [0.1, 0, 0] },
      
      "-coordinate": { "name": "PreciseCoordinate", "value": [12, 12, 12] },
