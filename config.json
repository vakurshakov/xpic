      "load_momentum_i": {
        "name": "MaxwellianMomentum",
        "tov": true
      },
      "load_momentum_e": {
        "name": "MaxwellianMomentum",
        "tov": true
      }
    }
  ],

  "StepPresets": [
  ],

  "Diagnostics": [
    {
      "diagnostic": "FieldView",
      "field": "E^n"
    },
    {
      "diagnostic": "FieldView",
      "field": "B^n"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "ions",
      "moment": "Density"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "electrons",
      "moment": "Density"
    }
  ]
