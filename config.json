{
  "OutputDirectory": "results/energy-test/ecsimcorr-periodic-square/mpi_z2",

  "Simulation": "ecsimcorr",

  "Geometry": {
    "x": 5,
    "y": 5,
    "z": 5,
    "t": 10,
    "dx": 1.0,
    "dy": 1.0,
    "dz": 1.0,
    "dt": 1.0,
    "diagnose_period": 1.0,
    "da_boundary_x": "DM_BOUNDARY_PERIODIC",
    "da_boundary_y": "DM_BOUNDARY_PERIODIC",
    "da_boundary_z": "DM_BOUNDARY_PERIODIC",
    "[x]": "c/w_pe",
    "[y]": "c/w_pe",
    "[z]": "c/w_pe",
    "[t]": "1/w_pe",
    "[dp]": "1/w_pe"
  },

  "omp": {
    "num_threads": 1,
    "places": "cores",
    "proc_bind": "spread"
  },

  "mpi": {
    "da_processors_x": 1,
    "da_processors_y": 1,
    "da_processors_z": 2,
    "binding": "socket",
    "mapping": "numa"
  },

  "Particles": [
    {
      "sort_name": "ions",
      "Np": 100,
      "n": 1.0,
      "q": 1.0,
      "m": 100.0,
      "T": 1.0
    },
    {
      "sort_name": "electrons",
      "Np": 100,
      "n": 1.0,
      "q": -1.0,
      "m": 1.0,
      "T": 1.0
    }
  ],

  "Presets": [
    {
      "command": "InjectParticles",
      "ionized": "ions",
      "ejected": "electrons",
      "coordinate": {
        "name": "CoordinateInBox",
        "min": 0.0,
        "max": "Geom"
      },
      "momentum_i": {
        "name": "MaxwellianMomentum",
        "tov": true
      },
      "momentum_e": {
        "name": "MaxwellianMomentum",
        "tov": true
      }
    }
  ],

  "StepPresets": [],

  "Diagnostics": []
}