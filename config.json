{
  "OutputDirectory": "results/energy-test/mirror/mpi_x2",

  "Simulation": "ecsimcorr",

  "mpi": {
    "da_processors_x": 2,
    "da_processors_y": 1,
    "da_processors_z": 1,
    "binding": "socket",
    "mapping": "numa"
  },

  "omp": {
    "num_threads": 1,
    "places": "cores",
    "proc_bind": "spread"
  },

  "Geometry": {
    "x": 30,
    "y": 30,
    "z": 30,
    "t": 10,
    "dx": 1.0,
    "dy": 1.0,
    "dz": 1.0,
    "dt": 1.0,
    "diagnose_period": 1.0,
    "da_boundary_x": "DM_BOUNDARY_PERIODIC",
    "da_boundary_y": "DM_BOUNDARY_PERIODIC",
    "da_boundary_z": "DM_BOUNDARY_PERIODIC",
    "[x]": "c/w_pe",
    "[y]": "c/w_pe",
    "[z]": "c/w_pe",
    "[t]": "1/w_pe",
    "[dp]": "1/w_pe"
  },

  "Particles": [
    {
      "sort_name": "ions",
      "Np": 100,
      "n": 1.0,
      "q": 1.0,
      "m": 100.0,
      "T": 1.0
    },
    {
      "sort_name": "electrons",
      "Np": 100,
      "n": 1.0,
      "q": -1.0,
      "m": 1.0,
      "T": 1.0
    }
  ],

  "Presets": [
  ],

  "StepPresets": [
    {
      "command": "RemoveParticles",
      "particles": "ions",
      "geometry": {
        "name": "CylinderGeometry",
        "radius": 14,
        "height": 28
      }
    },
    {
      "command": "RemoveParticles",
      "particles": "electrons",
      "geometry": {
        "name": "CylinderGeometry",
        "radius": 14,
        "height": 28
      }
    },
    {
      "command": "InjectParticles",
      "ionized": "ions",
      "ejected": "electrons",
      "injection_start": 0,
      "injection_end": "geom_t",
      "tau": 2000,
      "coordinate": {
        "name": "CoordinateInCylinder",
        "radius": 10,
        "height": 10
      },
      "momentum_i": {
        "name": "MaxwellianMomentum",
        "tov": true
      },
      "momentum_e": {
        "name": "MaxwellianMomentum",
        "tov": true
      }
    }
  ],

  "Diagnostics": []
}