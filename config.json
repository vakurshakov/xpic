{
  "OutputDirectory": "results/ecsimcorr/",

  "Simulation": "ecsimcorr",

  "Geometry": {
    "x": 100,
    "y": 100,
    "z": 2,
    "t": 10000,
    "[x]": "units of dx",
    "[y]": "units of dy",
    "[z]": "units of dz",
    "[t]": "units of dt",

    "dx": 0.5,
    "dy": 0.5,
    "dz": 0.5,
    "dt": 1.5,

    "diagnose_period": 4,
    "[dp]": "units of dt",

    "da_boundary_x": "DM_BOUNDARY_GHOSTED",
    "da_boundary_y": "DM_BOUNDARY_GHOSTED",
    "da_boundary_z": "DM_BOUNDARY_PERIODIC",

    "da_processors_x": -1,
    "da_processors_y": -1,
    "da_processors_z": -1
  },

  "Particles": [
    {
      "sort_name": "ions",
      "Np": 2000,
      "n": 1.0,
      "q": 1.0,
      "m": 100.0,
      "T": 10.0
    },
    {
      "sort_name": "electrons",
      "Np": 2000,
      "n":  1.0,
      "q": -1.0,
      "m":  1.0,
      "T":  1.0
    }
  ],

  "Presets": [
    {
      "command": "SetupMagneticField",
      "storage": "B^0",
      "value": [ 0.0, 0.0, 0.1 ]
    }
  ],

  "StepPresets": [
    {
      "command": "RemoveParticles",
      "particles": "ions",
      "geometry": {
        "name": "CircleGeometry",
        "radius": 48,
        "center": [ 50, 50, 0.5 ]
      }
    },
    {
      "command": "RemoveParticles",
      "particles": "electrons",
      "geometry": {
        "name": "CircleGeometry",
        "radius": 48,
        "center": [ 50, 50, 0.5 ]
      }
    },
    {
      "command": "InjectParticles",
      "ionized": "ions",
      "ejected": "electrons",
      "injection_start": 0,
      "injection_end": "geom_nt",
      "per_step_particles_num": 2000,
      "set_point_of_birth": {
        "name": "CoordinateInCylinder",
        "radius": 30,
        "height": 1,
        "center": [ 50, 50, 0.5 ]
      },
      "load_momentum_i": {
        "name": "MaxwellianMomentum",
        "tov": true
      },
      "load_momentum_e": {
        "name": "MaxwellianMomentum",
        "tov": true
      }
    }
  ],

  "Diagnostics": {}
}
