{
  "OutputDirectory": "results/mirror-test",

  "Simulation": "ecsimcorr",

  "Geometry": {
    "x": 30,
    "y": 30,
    "z": 30,
    "t": 60000,
    "[x]": "c/w_pe",
    "[y]": "c/w_pe",
    "[z]": "c/w_pe",
    "[t]": "1/w_pe",

    "dx": 0.5,
    "dy": 0.5,
    "dz": 0.5,
    "dt": 1.5,

    "diagnose_period": 1.5,
    "[dp]": "1/w_pe",

    "da_boundary_x": "DM_BOUNDARY_GHOSTED",
    "da_boundary_y": "DM_BOUNDARY_GHOSTED",
    "da_boundary_z": "DM_BOUNDARY_GHOSTED"
  },

  "Particles": [
    {
      "sort_name": "ions",
      "Np": 1000,
      "n": 1.0,
      "q": 1.0,
      "m": 100,
      "Tx": 10.0,
      "Ty": 10.0,
      "Tz": 0.10
    },
    {
      "sort_name": "electrons",
      "Np": 1000,
      "n":  1.0,
      "q": -1.0,
      "m":  1.0,
      "T":  1.0
    }
  ],

  "Presets": [],

  "StepPresets": [
    {
      "command": "RemoveParticles",
      "particles": "ions",
      "geometry": {
        "name": "CylinderGeometry",
        "radius": 10,
        "height": 10
      }
    },
    {
      "command": "RemoveParticles",
      "particles": "electrons",
      "geometry": {
        "name": "CylinderGeometry",
        "radius": 10,
        "height": 10
      }
    },
    {
      "command": "InjectParticles",
      "ionized": "ions",
      "ejected": "electrons",
      "injection_start": 0,
      "injection_end": "geom_t",
      "coordinate": {
        "name": "CoordinateInCylinder",
        "radius": 10,
        "height": 10
      },
      "momentum_i": {
        "name": "MaxwellianMomentum",
        "tov": true
      },
      "momentum_e": {
        "name": "MaxwellianMomentum",
        "tov": true
      }
    }
  ],

  "Diagnostics": [
    {
      "diagnostic": "FieldView",
      "field": "E"
    },
    {
      "diagnostic": "FieldView",
      "field": "B"
    },
    {
      "diagnostic": "FieldView",
      "field": "J_esirkepov"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "ions",
      "moment": "Density"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "electrons",
      "moment": "Density"
    }
  ]
}
