{
  "OutputDirectory": "results/ecsimcorr/",

  "Simulation": "ecsimcorr",

  "Geometry": {
    "x": 250,
    "y": 250,
    "z": 1,
    "t": 10000,
    "[x]": "c/w_pe",
    "[y]": "c/w_pe",
    "[z]": "c/w_pe",
    "[t]": "1/w_pe",

    "dx": 0.5,
    "dy": 0.5,
    "dz": 0.5,
    "dt": 1.5,

    "diagnose_period": 6,
    "[dp]": "1/w_pe",

    "da_boundary_x": "DM_BOUNDARY_GHOSTED",
    "da_boundary_y": "DM_BOUNDARY_GHOSTED",
    "da_boundary_z": "DM_BOUNDARY_PERIODIC",

    "da_processors_x": -1,
    "da_processors_y": -1,
    "da_processors_z": -1
  },

  "Particles": [
    {
      "sort_name": "ions",
      "Np": 2000,
      "n": 1.0,
      "q": 1.0,
      "m": 100.0,
      "T": 10.0
    },
    {
      "sort_name": "electrons",
      "Np": 2000,
      "n":  1.0,
      "q": -1.0,
      "m":  1.0,
      "T":  1.0
    }
  ],

  "Presets": [
    {
      "command": "SetupMagneticField",
      "field": "B^0",
      "value": [ 0.0, 0.0, 0.2 ]
    }
  ],

  "StepPresets": [
    {
      "command": "FieldsDamping",
      "fields": [ "E^n", "B^n" ],
      "geometry": {
        "name": "CircleGeometry",
        "radius": 123,
        "center": [ 125, 125, 0.5 ]
      }
    },
    {
      "command": "RemoveParticles",
      "particles": "ions",
      "geometry": {
        "name": "CircleGeometry",
        "radius": 123,
        "center": [ 125, 125, 0.5 ]
      }
    },
    {
      "command": "RemoveParticles",
      "particles": "electrons",
      "geometry": {
        "name": "CircleGeometry",
        "radius": 123,
        "center": [ 125, 125, 0.5 ]
      }
    },
    {
      "command": "InjectParticles",
      "ionized": "ions",
      "ejected": "electrons",
      "injection_start": 0,
      "injection_end": "geom_nt",
      "per_step_particles_num": 2000,
      "set_point_of_birth": {
        "name": "CoordinateInCylinder",
        "radius": 15,
        "height": 1,
        "center": [ 125, 125, 0.5 ]
      },
      "load_momentum_i": {
        "name": "MaxwellianMomentum",
        "tov": true
      },
      "load_momentum_e": {
        "name": "MaxwellianMomentum",
        "tov": true
      }
    }
  ],

  "Diagnostics": [
    {
      "diagnostic": "FieldView",
      "field": "E^n"
    },
    {
      "diagnostic": "FieldView",
      "field": "B^n"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "ions",
      "moment": "Density"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "ions",
      "moment": "Vr"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "ions",
      "moment": "Vphi"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "ions",
      "moment": "Vz"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "ions",
      "moment": "mVrVr"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "electrons",
      "moment": "Density"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "electrons",
      "moment": "Vr"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "electrons",
      "moment": "Vphi"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "electrons",
      "moment": "Vz"
    },
    {
      "diagnostic": "DistributionMoment",
      "particles": "electrons",
      "moment": "mVrVr"
    }
  ]
}
