{
  "Simulation": "ecsimcorr",

  "OutputDirectory": "results/kotelnikov_equilibrium/balance",

  "Geometry": {
    "x": 600,
    "y": 600,
    "z": 2, 
    "t": 10, 
    "dx": 1.0,
    "dy": 1.0,
    "dz": 1.0,
    "dt": 0.5,
    "diagnose_period": 0.5,
    "da_boundary_x": "DM_BOUNDARY_GHOSTED",
    "da_boundary_y": "DM_BOUNDARY_GHOSTED",
    "da_boundary_z": "DM_BOUNDARY_PERIODIC"
  },

  "Particles": [
    { "sort_name": "ions",      "Np": 10, "n": 1.0, "q":  1.0, "m": 100.0, "T": 10.0 },
    { "sort_name": "electrons", "Np": 10, "n": 1.0, "q": -1.0, "m":   1.0, "T":  0.1 }
  ],

  "Presets": [ { "command": "SetKotelnikovEquilibrium", "parameters": "a1.5_B0.01" } ],
  "StepPresets": [ { "command": "SetKotelnikovEquilibrium", "buffer": 2, "damping_coefficient": 0.8 } ],

  "Diagnostics": [
    { "diagnostic": "FieldView", "field": "E", "region": { "type": "2D", "plane": "Z" } },
    { "diagnostic": "FieldView", "field": "B", "region": { "type": "2D", "plane": "Z" } },

    { "diagnostic": "DistributionMoment", "particles": "ions", "moment": "density",                "region": { "type": "2D", "plane": "Z" } },
    { "diagnostic": "DistributionMoment", "particles": "ions", "moment": "current",                "region": { "type": "2D", "plane": "Z" } },
    { "diagnostic": "DistributionMoment", "particles": "ions", "moment": "momentum_flux_diag_cyl", "region": { "type": "2D", "plane": "Z" } },

    { "diagnostic": "DistributionMoment", "particles": "electrons", "moment": "density",                "region": { "type": "2D", "plane": "Z" } },
    { "diagnostic": "DistributionMoment", "particles": "electrons", "moment": "current",                "region": { "type": "2D", "plane": "Z" } },
    { "diagnostic": "DistributionMoment", "particles": "electrons", "moment": "momentum_flux_diag_cyl", "region": { "type": "2D", "plane": "Z" } }
  ]
}