  "Particles": [
    {
      "sort_name": "ions",
      "Np": 1000,
      "n": 1.0,
      "q": 1.0,
      "m": 100.0,
      "T": 1.0
    },
    {
      "sort_name": "electrons",
      "Np": 1000,
      "n":  1.0,
      "q": -1.0,
      "m":  1.0,
      "T":  1.0
    }
  ],

  "Presets": [
    {
      "command": "InjectParticles",
      "ionized": "ions",
      "ejected": "electrons",
      "set_point_of_birth": {
        "name": "CoordinateInBox",
        "min": 0.0,
        "max": "Geom"
