{
  "OutputDirectory": "results/energy-test/ecsim-periodic-square",

  "Simulation": "ecsimcorr",

  "Geometry": {
    "x": 5,
    "y": 5,
    "z": 0.5,
    "t": 10,
    "[x]": "c/w_pe",
    "[y]": "c/w_pe",
    "[z]": "c/w_pe",
    "[t]": "1/w_pe",

    "dx": 0.5,
    "dy": 0.5,
    "dz": 0.5,
    "dt": 1.0,

    "diagnose_period": 1.0,
    "[dp]": "1/w_pe",

    "da_boundary_x": "DM_BOUNDARY_PERIODIC",
    "da_boundary_y": "DM_BOUNDARY_PERIODIC",
    "da_boundary_z": "DM_BOUNDARY_PERIODIC",

    "da_processors_x": -1,
    "da_processors_y": -1,
    "da_processors_z": -1
